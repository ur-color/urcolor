{
  "name": "@urcolor/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts --outdir ./dist --format esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist --project tsconfig.build.json"
  },
  "dependencies": {
    "internationalized-color": "*"
  }
}
