{
  "name": "@urcolor/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts --outdir ./dist --format esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist --project tsconfig.build.json"
  },
  "keywords": [
    "color",
    "color-picker",
    "color-space",
    "gradient",
    "webgl",
    "hsl",
    "oklch",
    "oklab",
    "display-p3",
    "color-conversion"
  ],
  "author": {
    "name": "GrandMagus",
    "url": "https://github.com/GrandMagus02"
  },
  "homepage": "https://urcolor.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ur-color/urcolor",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/ur-color/urcolor/issues"
  },
  "dependencies": {
    "internationalized-color": "*"
  }
}
