{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docs (VitePress)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/docs",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Storybook (Vue)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/vue",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "run",
        "storybook",
        "--ci"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}